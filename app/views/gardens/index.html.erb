<div id="main-container" class="container">
  <%= link_to "create a new garden", new_garden_path %>
  <div class="row">
    <div class="col-xs-5">
      <table>
        <tr>
          <th width="30%">garden</th>
          <th width="30%">authors</th>
          <th width="30%"></th>
        </tr>

        <% @gardens.each do |garden| %>
          <tr>
            <td><%= garden.name %></td>
            <td><%= garden.author_names %></td>
            <td><%= link_to "walk in the garden", garden_path(garden) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>