<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-5">
      <%= semantic_form_for @work do |f| %>
        <%= f.inputs do %>
          <%= f.input :name %>
          <%= f.input :author_id, :as => :hidden %>
          Author: <%= @work.author.name %>
          <%= f.input :text %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, :label => "save" %>
        <% end %>
      <% end %>

      <%= link_to "back to #{@work.author.name}", author_path(@work.author) %>
    </div>
  </div>
</div>